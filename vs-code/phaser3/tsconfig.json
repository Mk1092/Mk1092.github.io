{
  "compilerOptions": {
    "module": "amd",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "lib": [ "es5", "dom", "es2015.promise", "scripthost" ],
    "outFile": "js/maintainable_game.js"
  },
  "include": [
    "lib/**/*",
    "src/**/*", "js/matter.d.ts"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}